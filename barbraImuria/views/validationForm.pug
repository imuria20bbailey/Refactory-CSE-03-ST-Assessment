doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Validation Form
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65' crossorigin='anonymous')
    link(rel='stylesheet' href='#')
  body(style="background:#ddd;")
    .container
      .row(style="background:#fff;")
        .col-md-4.d-flex.align-items-center.justify-content-center(style="background:#fff;")
          img(src='/images/CIU.PNG' alt='Image Description' class='img-fluid')
        .col-md-6
          #main.form
            .card-body
              form(id='studentForm', action='/add-form', method='POST')
                h1(style='text-align: center;') STUDENT APPLICATION FORM
                .row
                  .mb-4.col-md-6
                    label(for='firstName') First Name
                    input#firstName.form-control(type='text' name='firstName' aria-label='firstName')
                    .invalid-feedback First name is required.
                  
                  .mb-4.col-md-6
                    label(for='lastName') Last Name
                    input#lastName.form-control(type='text' name='lastName' aria-label='lastName')
                    .invalid-feedback Last name is required.

                  .mb-4.col-md-6
                    label(for='course') Course
                    select#course.form-select(name='course' type='text')
                      option(value='') --select--
                      option(value='CSE-Javascript') CSE-with-JavaScript 
                      option(value='CSE-Paython') CSE-with-Paython
                    .invalid-feedback Course selection is required.
                  
                  .mb-4.col-md-6
                    label(for='entrySchema') Entry Scheme
                    select#entrySchema.form-select(name='entrySchema' type='text')
                      option(value='') --select--
                      option(value='Diploma') Diploma
                      option(value='Certificate') Certificate
                    .invalid-feedback Entry scheme selection is required.

                  .mb-4.col-md-6
                    label(for='intake') Intake
                    select#intake.form-select(name='intake' type='text')
                      option(value='') --select--
                      option(value='January') January 
                      option(value='August') August
                    .invalid-feedback Intake selection is required.

                  .mb-4.col-md-6
                    label(for='sponsorship') Sponsorship
                    select#sponsorship.form-select(name='sponsorship' type='text')
                      option(value='') --select--
                      option(value='Full Sponsorship') Full Sponsorship
                      option(value='Half Sponsorship') Half Sponsorship
                    .invalid-feedback Sponsorship selection is required.

                  .mb-4.col-md-6
                    label(for='gender') Gender:
                    br
                    div.form-check.form-check-inline
                      input#male.form-check-input(type="radio" value="Male" name="gender" checked)
                      label.form-check-label(for="male") Male
                    div.form-check.form-check-inline
                      input#female.form-check-input(type="radio" value="Female" name="gender")
                      label.form-check-label(for="female") Female
                    .invalid-feedback Gender selection is required.

                  .mb-4.col-md-6
                    label(for='dateOfBirth') Date of birth
                    input#dateOfBirth.form-control(type='date' name='dateOfBirth' aria-label='dateOfBirth')
                    .invalid-feedback Date of birth is required.

                  .mb-4.col-md-6
                    label(for='residence') Residence
                    input#residence.form-control(type='text' name='residence' aria-label='residence')
                    .invalid-feedback Residence is required.

                .mb-4.col-auto(style='text-align: center;')
                  button.btn.btn-primary.mb-3(type='submit') Register
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4' crossorigin='anonymous')
    script.
      document.getElementById('studentForm').addEventListener('submit', function(event) {
        let isValid = true;

        const fields = [
          { id: 'firstName', message: 'First name is required.' },
          { id: 'lastName', message: 'Last name is required.' },
          { id: 'course', message: 'Course selection is required.' },
          { id: 'entrySchema', message: 'Entry scheme selection is required.' },
          { id: 'intake', message: 'Intake selection is required.' },
          { id: 'sponsorship', message: 'Sponsorship selection is required.' },
          { id: 'dateOfBirth', message: 'Date of birth is required.' },
          { id: 'residence', message: 'Residence is required.' },
        ];

        fields.forEach(field => {
          const input = document.getElementById(field.id);
          if (input.value.trim() === '') {
            input.classList.add('is-invalid');
            isValid = false;
          } else {
            input.classList.remove('is-invalid');
          }
        });

        if (!isValid) {
          event.preventDefault();
        }
      });
